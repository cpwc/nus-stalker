  <% 
  
  function appendChecksum(matric) {
      var sum = 0;
      for (var i=1; i<8; i++) {
          sum += parseInt(matric[i]);
      }
      var table = ['Y', 'X', 'W', 'U', 'R', 'N', 'M', 'L', 'J', 'H', 'E', 'A', 'B'];
      return matric + table[sum%13];
  }
  
  %>

  <body>

    <div class="container text-center">

        <h1>Search results for "<%= search %>"</h1>
        
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Matric</th>
                <th>Name</th>
                <th>Faculty</th>
            </tr>
            <% for (var i=0; i<results.length; i++) { %>
                <tr onclick="stalk('<%= results[i].name %>');" class="table-hand">
                    <td><%= i+1 %></td>
                    <td style="text-transform:uppercase"><%= appendChecksum(results[i].name) %></td>
                    <td><%= results[i].displayName %></td>
                    <td><%= results[i].department ? results[i].department : '-' %></td>
                </tr>
            <% } %>
        </table>
	<a href="/" class="btn pull-right">Back</a>
    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="js/jquery-1.10.2.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script>
    function stalk(id) {
        window.location.href = 'person?id=' + id;
    }
    </script>
  </body>
</html>
